{
  "manifest_version": 3,
  "name": "Intercept",
  "version": "1.0.0",
  "description": "Manage request headers and URL redirects",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "twist16.png",
      "48": "twist48.png",
      "128": "twist128.png"
    }
  },
  "icons": {
    "16": "twist16.png",
    "48": "twist48.png",
    "128": "twist128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}